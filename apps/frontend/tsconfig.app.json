{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "incremental": true,
    "strictPropertyInitialization": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "references": [
    {
      "path": "../space-defender/tsconfig.lib.json"
    },
    {
      "path": "../mars-lander/tsconfig.lib.json"
    },
    {
      "path": "../battle-tanks/tsconfig.lib.json"
    }
  ]
}
